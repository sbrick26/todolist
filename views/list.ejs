<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%=dayInput%> List</h1>
    </div>

    <div class ="box">
        
        <% for (var x = 0; x < newListItem.length; x++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%=newListItem[x]%></p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%= dayInput %>>+</button>
        </form>
    </div>

<%- include("footer") -%>